{
  "name": "electron-crash-report-server",
  "version": "0.5.6",
  "description": "Crash report server for Electron applications",
  "repository": "github:johnmuhl/electron-crash-report-server",
  "author": "John Muhl <git@johnmuhl.com>",
  "license": "MIT",
  "bugs": "https://github.com/johnmuhl/electron-crash-report-server/issues",
  "homepage": "https://johnmuhl.github.io/electron-crash-report-server",
  "scripts": {
    "format": "yarn run prettier && yarn run lint --fix",
    "lint": "eslint --ignore-pattern=electron-bomb/node_modules .",
    "prettier": "prettier --write '{*,electron-bomb/*}.js'",
    "start-dev": "nodemon server.js",
    "test": "yarn lint"
  },
  "engines": {
    "node": "^8.9.0"
  },
  "dependencies": {
    "boom": "~6.0.0",
    "handlebars": "~4.0.11",
    "hapi": "~17.0.0-rc9",
    "hapi-auth-basic": "~4.2.0",
    "massive": "~4.4.0",
    "vision": "~5.0.0-rc8"
  },
  "devDependencies": {
    "dotenv": "~4.0.0",
    "eslint": "~4.10.0",
    "eslint-config-oz": "github:johnmuhl/eslint-config-oz",
    "nodemon": "~1.12.1",
    "prettier": "~1.7.4"
  },
  "eslintConfig": {
    "extends": "oz"
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": true
  }
}
